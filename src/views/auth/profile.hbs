<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h3>¡Bienvenid@, {{user.NOMBRE}}!</h3>
                    <p>Este es tu historial de compras.</p>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">Mi Historial de Pedidos</h4>
                    
                    {{#each pedidos}}
                    <div class="card mb-2">
                        <div class="card-body">
                           <h5 class="card-title">Pedido #{{PEDIDO_ID}}</h5>
                           <p class="card-text">
                               Realizado el: {{formatDate FECHA_PEDIDO}} <br>
                               Total: <strong>${{MONTO_TOTAL}}</strong>
                           </p>
                           <a href="/checkout/detalle/{{PEDIDO_ID}}" class="btn btn-primary btn-sm">Ver Detalle</a>
                        </div>
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        Aún no has realizado ninguna compra.
                    </div>
                    {{/each}}

                </div>
            </div>
            </div>
    </div>
</div>